# Database - Replace with your Coolify PostgreSQL connection string
DATABASE_URL="postgresql://username:password@postgresql-host:5432/database_name"

# MinIO S3-compatible storage - Configure with your Coolify MinIO instance
MINIO_ENDPOINT="minio-host.coolify.app"
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY="your-minio-access-key"
MINIO_SECRET_KEY="your-minio-secret-key"
MINIO_BUCKET="job-applications"

# Server configuration
PORT=3000
NODE_ENV=production

# Optional: If using external S3 instead of MinIO
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# S3_BUCKET="your-s3-bucket-name"